{
  "compilerOptions": {
    "outDir": "./build/tsc",
    "target": "es2017",
    "module": "esnext",
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": [],
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
